<!DOCTYPE html>
<html>
<head>
  <title>Profile</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: center;
      margin-top: 20px;
    }

    h2 {
      margin-top: 30px;
    }

    ul {
      list-style-type: none;
      padding: 0;
      margin-top: 10px;
    }

    li {
      background-color: #fff;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    h3 {
      margin-top: 0;
    }

    p {
      margin-top: 5px;
    }
  </style>
</head>
<body>
 
  <!-- profile.ejs -->

<h1>Welcome to your profile</h1>

<h2>Quiz Scores:</h2>

<ul>
  <% user.quizScores.forEach((quizScore) => { %>
    <li>
      <h3>Quiz: <%= quizScore.quiz.quizName %></h3>
      <p>Score: <%= quizScore.score %></p>
    </li>
  <% }); %>
</ul>

</body>
</html>
